<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FullScreenDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <!-- Full Screen without status bar -->
        <item name="android:windowFullscreen">true</item>

        <item name="android:windowIsFloating">false</item>

        <!-- Set window background -->

    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/green</item>
        <item name="colorAccent">@color/green</item>
    </style>

    <style name="unselectedText" parent="@style/TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/telenorregular</item>
        <item name="android:textColor">#4B5764</item>
    </style>

    <style	name="selectedText" parent="@style/TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/telenorregular</item>
        <item name="android:textColor">#00BD5F</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style	name="titleText"	parent="@style/TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/telenorregular</item>
        <item name="android:textColor">#788995</item>
    </style>
    <style	name="valueText" parent="@style/TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/telenorregular</item>
        <item name="android:textColor">#4B5764</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="emojiUnselectedText" parent="@style/TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/telenorregular</item>
        <item name="android:textColor">#BCC4CA</item>
    </style>

    <style	name="whiteColorText"	parent="@style/TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/telenorregular</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">@dimen/_9ssp</item>
    </style>

    <style		name="greyColorText"	parent="@style/TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/telenorregular</item>
        <item name="android:textColor">#788995</item>
        <item name="android:textSize">@dimen/_9ssp</item>
    </style>

    <style		name="donationAmountText"		parent="@style/TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/telenorregular</item>
        <item name="android:textColor">#80788995</item>
    </style>

    <style name="OtpWidget"/>

    <style name="OtpWidget.OtpView" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:maxLines">1</item>
    </style>
</resources>