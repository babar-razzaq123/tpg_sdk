<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <layer-list>

            <item>
                <shape android:shape="rectangle">
                    <padding
                            android:left="@dimen/_15sdp"
                            android:right="@dimen/_15sdp"
                            android:top="@dimen/_5sdp"
                            android:bottom="@dimen/_5sdp"
                            />

                    <solid
                            android:color="#FFFFFF"/>

                    <stroke android:width="1sp" android:color="#DDE3E8" />
                    <corners android:radius="5dp" />
                </shape>
            </item>

            <item>

                <bitmap android:gravity="center|end" android:src="@drawable/drop_down_arrow"/>

            </item>

        </layer-list>

    </item>

</selector>